<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:fitsSystemWindows="true"
    tools:context="com.app.kutaykerem.productdiscovery.Pages.GizlilikPolitikasiFragment">


    <ImageView
        android:id="@+id/gizlilik_geri"
        style="@style/ICON_TINT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/gizlilik_gizlilik_Text"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/gizlilik_geri"
        app:layout_constraintStart_toEndOf="@+id/gizlilik_geri"
        app:layout_constraintTop_toTopOf="@+id/gizlilik_geri"
        tools:ignore="UnknownId" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gizlilik_geri"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/gizlilik_aciklamasi_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:accessibilityLiveRegion="none"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            style="@style/TEXT"
            android:textSize="20sp"
            android:textStyle="normal"
            android:typeface="sans" />


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>