<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/SCREEN"
    >


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/radius_bildirimler"
    style="@style/CardViewKesfetBackground"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    >




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/arkadaslarConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"




        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recyclerrow_arkadaslar_Profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </de.hdodenhof.circleimageview.CircleImageView>


        <TextView
            android:id="@+id/recyclerrow_arkadaslar_kullanıcıAdı"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:padding="3dp"
            android:text=""
            android:maxLength="25"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/recyclerrow_arkadaslar_Profile"
            app:layout_constraintTop_toTopOf="@+id/recyclerrow_arkadaslar_Profile" />

        <TextView
            android:id="@+id/recyclerrow_arkadaslar_sonMesaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            style="@style/TEXT"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLength="40"
            android:padding="3dp"
            android:text=""
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/recyclerrow_arkadaslar_Profile"
            app:layout_constraintTop_toBottomOf="@+id/recyclerrow_arkadaslar_kullanıcıAdı" />


        <TextView

            android:id="@+id/recyclerrow_arkadaslar_sonMesajTarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text=""
            android:textColor="@color/secilenAcikRenk"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/recyclerrow_arkadaslar_kullanıcıAdı"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/recyclerrow_arkadaslar_sonMesajKarsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="start"
            android:maxLength="40"
            android:ellipsize="end"
            android:padding="3dp"
            android:text=""
            android:textColor="@color/secilenAcikRenk"
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/recyclerrow_arkadaslar_Profile"
            app:layout_constraintTop_toBottomOf="@+id/recyclerrow_arkadaslar_kullanıcıAdı" />










    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>











